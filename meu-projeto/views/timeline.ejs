<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Taskline - Linha do Tempo</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <%- include('partials/header', { userName }) %>

    <main class="max-w-4xl mx-auto p-6">
      <h1 class="text-2xl font-bold text-center mb-6">Linha do Tempo</h1>
      <div id="timeline-list" class="space-y-4"></div>
    </main>

    <%- include('partials/footer') %>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const timelineList = document.getElementById('timeline-list');

        function loadCompleted() {
          fetch('/api/tasks/completed')
            .then(res => res.json())
            .then(tasks => {
              timelineList.innerHTML = '';
              if (tasks.length === 0) {
                timelineList.innerHTML = '<p class="text-center text-gray-500">Nenhuma tarefa concluída ainda.</p>';
                return;
              }
              tasks.forEach(t => {
                const div = document.createElement('div');
                div.className = 'bg-white p-4 rounded shadow flex justify-between items-center';
                // Formatando a data/hora de completed_at
                const dt = new Date(t.completed_at);
                const dataFormatada = dt.toLocaleDateString('pt-BR');
                const horaFormatada = dt.toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' });
                div.innerHTML = `
                  <div>
                    <h3 class="font-medium">${t.title}</h3>
                    <small class="text-gray-400 text-xs">${dataFormatada} ${horaFormatada}</small>
                    <p class="text-gray-600 text-sm mt-1">${t.section_name || 'Sem seção'}</p>
                  </div>
                  <button data-id="${t.id}" class="delete-comp text-red-500 hover:underline text-sm">Excluir</button>
                `;
                timelineList.appendChild(div);
              });
              attachDeleteListeners();
            });
        }

        function attachDeleteListeners() {
          document.querySelectorAll('.delete-comp').forEach(btn => {
            btn.onclick = () => {
              const id = btn.dataset.id;
              fetch(`/api/tasks/${id}`, { method: 'DELETE' })
                .then(_ => loadCompleted());
            };
          });
        }

        loadCompleted();
      });
    </script>
  </body>
</html>
