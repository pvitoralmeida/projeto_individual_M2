<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <title>Criar Tarefa</title>
</head>
<body>
  <%- include('partials/header', { userName: userName }) %>

  <main class="max-w-md mx-auto bg-white p-8 rounded shadow-md mt-12">
    <h1 class="text-2xl font-bold mb-6 text-center">Criar Nova Tarefa</h1>

    <% if (error) { %>
      <p class="text-red-500 text-center mb-4"><%= error %></p>
    <% } %>

    <form action="/tasks" method="POST" class="space-y-6">
      <div>
        <label for="title" class="block mb-1 font-semibold">Título</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Título da tarefa"
        />
      </div>

      <div>
        <label for="description" class="block mb-1 font-semibold">Descrição</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Detalhes da tarefa (opcional)"
        ></textarea>
      </div>

      <div class="flex space-x-4">
        <div class="flex-1">
          <label for="due_date" class="block mb-1 font-semibold">Data de Vencimento</label>
          <input
            type="date"
            id="due_date"
            name="due_date"
            class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div class="flex-1">
          <label for="due_time" class="block mb-1 font-semibold">Hora de Vencimento</label>
          <input
            type="time"
            id="due_time"
            name="due_time"
            class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>
      </div>

      <div>
        <label for="section_id" class="block mb-1 font-semibold">Seção</label>
        <select
          id="section_id"
          name="section_id"
          required
          class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          <option value="" disabled selected>Selecione uma seção</option>
          <% sections.forEach(section => { %>
            <option value="<%= section.id %>"><%= section.name %></option>
          <% }) %>
        </select>
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition-colors duration-200"
      >
        Criar Tarefa
      </button>
    </form>
  </main>
</body>
</html>